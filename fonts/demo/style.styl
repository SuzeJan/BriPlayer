@import "variables"

@font-face
  font-family 'my-player-font'
  src url(icomoon-font-path + '/my-player-font.eot?fupcld')
  src url(icomoon-font-path + '/my-player-font.eot?fupcld#iefix') format('embedded-opentype'), url(icomoon-font-path + '/my-player-font.ttf?fupcld') format('truetype'), url(icomoon-font-path + '/my-player-font.woff?fupcld') format('woff'), url(icomoon-font-path + '/my-player-font.svg?fupcld#my-player-font') format('svg')
  font-weight normal
  font-style normal

[class^="icon-player"], [class*=" icon-player"]
  font-family 'my-player-font' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

